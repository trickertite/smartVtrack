<p id="notice"><%= notice %></p>

<h1>Listing Share Users</h1>

<table>
  <thead>
    <tr>
      <th>Driver</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @share_users.each do |share_user| %>
      <tr>
        <td><%= share_user.driver %></td>
        <td><%= link_to 'Show', share_user %></td>
        <td><%= link_to 'Edit', edit_share_user_path(share_user) %></td>
        <td><%= link_to 'Destroy', share_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

