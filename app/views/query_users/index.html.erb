<p id="notice"><%= notice %></p>

<h1>Listing Query Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Password</th>
      <th>Email</th>
      <th>Mobile</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @query_users.each do |query_user| %>
      <tr>
        <td><%= query_user.name %></td>
        <td><%= query_user.password %></td>
        <td><%= query_user.email %></td>
        <td><%= query_user.mobile %></td>
        <td><%= link_to 'Show', query_user %></td>
        <td><%= link_to 'Edit', edit_query_user_path(query_user) %></td>
        <td><%= link_to 'Destroy', query_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

